/* =============================================
   STUDIOSUNISDB - THEME GLASSMORPHIQUE COMPLET
   ============================================= */

/* ========== VARIABLES CSS ========== */
:root {
  /* Couleurs principales */
  --bg-primary: #1a1d21;      /* Fond principal gris très foncé */
  --bg-secondary: #1e3c72;    /* Fond secondaire bleu foncé */
  --bg-tertiary: #2a5298;     /* Fond tertiaire bleu */
  --bg-sidebar: #3d444c;      /* Sidebar gris */
  --bg-card: #293237;         /* Cartes gris foncé */
  
  /* Couleurs d'accent */
  --color-primary: #00caff;   /* Cyan principal */
  --color-info: #17a2b8;      /* Bleu info */
  --color-cyan: #20b9be;      /* Turquoise */
  --color-green: #4caf50;     /* Vert succès */
  --color-success: #28a745;   /* Vert alternatif */
  --color-orange: #ff9800;    /* Orange */
  --color-warning: #ffd92c;   /* Jaune warning */
  --color-pink: #e91e63;      /* Rose */
  --color-red: #f44336;       /* Rouge */
  --color-danger: #dc3545;    /* Rouge danger */
  --color-purple: #9c27b0;    /* Violet */
  
  /* Effets Glass */
  --glass-bg: rgba(255, 255, 255, 0.05);
  --glass-bg-hover: rgba(255, 255, 255, 0.08);
  --glass-bg-active: rgba(255, 255, 255, 0.1);
  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-border-hover: rgba(255, 255, 255, 0.2);
  --glass-blur: 16px;
  --glass-blur-strong: 20px;
  
  /* Gradients principaux */
  --gradient-primary: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
  --gradient-glass: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  --gradient-cyan: linear-gradient(135deg, #17a2b8 0%, #00caff 100%);
  --gradient-success: linear-gradient(90deg, #17a2b8, #20c997);
  
  /* Ombres */
  --shadow-sm: 0 2px 10px rgba(0, 0, 0, 0.2);
  --shadow-md: 0 8px 30px rgba(0, 0, 0, 0.25);
  --shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.3);
  --shadow-xl: 0 15px 40px rgba(0, 0, 0, 0.4);
  --shadow-glow-cyan: 0 10px 30px rgba(0, 212, 255, 0.3);
  
  /* Typographie */
  --font-primary: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', sans-serif;
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.8);
  --text-muted: rgba(255, 255, 255, 0.6);
  --text-disabled: rgba(255, 255, 255, 0.4);
  
  /* Espacements */
  --radius-sm: 8px;
  --radius-md: 10px;
  --radius-lg: 15px;
  --radius-xl: 20px;
  
  /* Transitions */
  --transition-base: all 0.3s ease;
  --transition-fast: all 0.2s ease;
}

/* ========== RESET & BASE ========== */
* {
  box-sizing: border-box;
}

body {
  font-family: var(--font-primary);
  background: var(--bg-primary);
  color: var(--text-primary);
  margin: 0;
  padding: 0;
  min-height: 100vh;
  line-height: 1.5;
}

/* Background avec gradient */
body.gradient-bg {
  background: var(--gradient-primary);
  background-attachment: fixed;
}

/* ========== EFFETS GLASS GLOBAUX ========== */
.glass {
  background: var(--glass-bg);
  backdrop-filter: blur(var(--glass-blur));
  -webkit-backdrop-filter: blur(var(--glass-blur));
  border: 1px solid var(--glass-border);
}

.glass-strong {
  background: rgba(40, 44, 52, 0.95);
  backdrop-filter: blur(var(--glass-blur-strong));
  -webkit-backdrop-filter: blur(var(--glass-blur-strong));
  border: 1px solid var(--glass-border);
}

.glass-dark {
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(var(--glass-blur));
  -webkit-backdrop-filter: blur(var(--glass-blur));
}

/* ========== CARTES ========== */
.card {
  background: var(--gradient-glass);
  backdrop-filter: blur(var(--glass-blur));
  -webkit-backdrop-filter: blur(var(--glass-blur));
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  padding: 25px;
  transition: var(--transition-base);
  position: relative;
  overflow: hidden;
}

.card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-glow-cyan);
  background: var(--glass-bg-hover);
}

/* Cartes avec bordure colorée en haut */
.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--color-cyan);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card.bordered::before { opacity: 1; }
.card.cyan::before { background: var(--color-cyan); opacity: 1; }
.card.green::before { background: var(--color-green); opacity: 1; }
.card.orange::before { background: var(--color-orange); opacity: 1; }
.card.pink::before { background: var(--color-pink); opacity: 1; }
.card.red::before { background: var(--color-red); opacity: 1; }

/* ========== CARTES STATISTIQUES ========== */
.stat-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: 25px;
  position: relative;
  overflow: hidden;
  transition: var(--transition-base);
  box-shadow: var(--shadow-sm);
}

.stat-card:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-lg);
}

.stat-icon {
  width: 50px;
  height: 50px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  float: right;
  margin-top: -5px;
}

.stat-icon.cyan { 
  background: rgba(32, 185, 190, 0.15); 
  color: var(--color-cyan);
}

.stat-icon.green { 
  background: rgba(76, 175, 80, 0.15); 
  color: var(--color-green);
}

.stat-icon.orange { 
  background: rgba(255, 152, 0, 0.15); 
  color: var(--color-orange);
}

.stat-icon.pink { 
  background: rgba(233, 30, 99, 0.15); 
  color: var(--color-pink);
}

.stat-value {
  font-size: 36px;
  font-weight: 300;
  color: var(--text-primary);
  line-height: 1;
  margin-bottom: 8px;
}

.stat-label {
  font-size: 14px;
  color: var(--text-muted);
  margin-bottom: 15px;
}

/* ========== BOUTONS ========== */
.btn {
  padding: 10px 20px;
  border-radius: var(--radius-md);
  font-size: 14px;
  font-weight: 500;
  transition: var(--transition-base);
  border: none;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
  position: relative;
  overflow: hidden;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

/* Bouton primaire avec gradient */
.btn-primary {
  background: var(--gradient-cyan);
  color: white;
}

.btn-primary:hover {
  box-shadow: var(--shadow-glow-cyan);
}

/* Boutons colorés */
.btn-info { background: var(--color-info); color: white; }
.btn-success { background: var(--color-green); color: white; }
.btn-warning { background: var(--color-orange); color: white; }
.btn-danger { background: var(--color-red); color: white; }

/* Boutons outline */
.btn-outline {
  background: transparent;
  border: 1px solid var(--glass-border);
  color: var(--text-primary);
}

.btn-outline:hover {
  background: var(--glass-bg);
  border-color: var(--glass-border-hover);
}

.btn-outline-info { border-color: var(--color-info); color: var(--color-info); }
.btn-outline-success { border-color: var(--color-green); color: var(--color-green); }
.btn-outline-warning { border-color: var(--color-orange); color: var(--color-orange); }
.btn-outline-danger { border-color: var(--color-red); color: var(--color-red); }

/* Bouton avec animation de chargement */
.btn-loading {
  position: relative;
  color: transparent !important;
}

.btn-loading::after {
  content: "";
  position: absolute;
  width: 20px;
  height: 20px;
  top: 50%;
  left: 50%;
  margin-left: -10px;
  margin-top: -10px;
  border: 2px solid #ffffff;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

/* ========== FORMULAIRES ========== */
.form-control,
.form-select {
  width: 100%;
  padding: 12px 16px;
  background: var(--glass-bg);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-size: 14px;
  transition: var(--transition-base);
}

.form-control:focus,
.form-select:focus {
  outline: none;
  background: var(--glass-bg-hover);
  border-color: var(--color-cyan);
  box-shadow: 0 0 0 3px rgba(32, 185, 190, 0.1);
}

.form-control::placeholder {
  color: var(--text-disabled);
}

/* Labels flottants */
.form-floating {
  position: relative;
}

.form-floating label {
  position: absolute;
  top: 16px;
  left: 16px;
  color: var(--text-muted);
  transition: var(--transition-base);
  pointer-events: none;
}

.form-floating input:focus ~ label,
.form-floating input:not(:placeholder-shown) ~ label {
  top: -8px;
  left: 12px;
  font-size: 12px;
  color: var(--color-cyan);
  background: var(--bg-card);
  padding: 0 4px;
}

/* ========== TABLES ========== */
.table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0 8px;
}

.table th {
  padding: 12px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  color: var(--text-muted);
  background: rgba(0, 0, 0, 0.3);
  border: none;
}

.table td {
  padding: 16px;
  background: var(--glass-bg);
  border: none;
  color: var(--text-secondary);
  transition: var(--transition-base);
}

.table tbody tr {
  transition: var(--transition-base);
}

.table tbody tr:hover td {
  background: rgba(23, 162, 184, 0.1);
  transform: translateX(5px);
}

/* Table moderne avec coins arrondis */
.table-modern tbody tr td:first-child {
  border-radius: var(--radius-md) 0 0 var(--radius-md);
}

.table-modern tbody tr td:last-child {
  border-radius: 0 var(--radius-md) var(--radius-md) 0;
}

/* ========== NAVIGATION & SIDEBAR ========== */
.theta-sidebar, .sidebar {
  width: 220px;
  height: 100vh;
  background: var(--bg-sidebar);
  backdrop-filter: blur(var(--glass-blur));
  -webkit-backdrop-filter: blur(var(--glass-blur));
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  box-shadow: var(--shadow-lg);
}

.nav-link {
  display: flex;
  align-items: center;
  padding: 12px 18px;
  color: var(--text-secondary);
  text-decoration: none;
  border-radius: var(--radius-md);
  transition: var(--transition-base);
  position: relative;
  overflow: hidden;
}

.nav-link:hover {
  background: var(--glass-bg-hover);
  color: var(--text-primary);
  transform: translateX(5px);
}

.nav-link.active {
  background: var(--color-cyan);
  color: white;
  font-weight: 500;
}

/* Effet shine sur hover */
.nav-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.nav-link:hover::before {
  left: 100%;
}

/* ========== MODALES ========== */
.modal {
  background: rgba(40, 44, 52, 0.95);
  backdrop-filter: blur(var(--glass-blur));
  -webkit-backdrop-filter: blur(var(--glass-blur));
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
}

.modal-backdrop {
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(5px);
}

/* ========== ALERTES & NOTIFICATIONS ========== */
.alert {
  padding: 16px 20px;
  border-radius: var(--radius-md);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid;
  margin-bottom: 20px;
}

.alert-success {
  background: rgba(40, 167, 69, 0.2);
  border-color: var(--color-green);
  color: var(--color-green);
}

.alert-danger {
  background: rgba(220, 53, 69, 0.2);
  border-color: var(--color-danger);
  color: var(--color-danger);
}

.alert-warning {
  background: rgba(255, 193, 7, 0.2);
  border-color: var(--color-warning);
  color: var(--color-warning);
}

.alert-info {
  background: rgba(23, 162, 184, 0.2);
  border-color: var(--color-info);
  color: var(--color-info);
}

/* Toasts notifications */
.toast {
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-lg);
}

/* ========== BADGES ========== */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 12px;
  font-size: 12px;
  font-weight: 600;
  border-radius: 20px;
  transition: var(--transition-base);
}

.badge-gradient {
  background: linear-gradient(135deg, var(--color-cyan), var(--color-purple));
  color: white;
}

.badge-success {
  background: rgba(76, 175, 80, 0.2);
  color: var(--color-green);
}

.badge-warning {
  background: rgba(255, 152, 0, 0.2);
  color: var(--color-orange);
}

.badge-danger {
  background: rgba(244, 67, 54, 0.2);
  color: var(--color-red);
}

.badge-info {
  background: rgba(32, 185, 190, 0.2);
  color: var(--color-cyan);
}

/* Badge avec animation pulse */
.badge-pulse {
  animation: pulse 2s infinite;
}

/* ========== ANIMATIONS ========== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(32, 185, 190, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(32, 185, 190, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(32, 185, 190, 0);
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes shimmer {
  0% { background-position: -200px 0; }
  100% { background-position: 200px 0; }
}

/* Classes d'animation */
.animate-fadeInUp {
  animation: fadeInUp 0.6s ease-out;
}

.animate-slideInRight {
  animation: slideInRight 0.6s ease-out;
}

.animate-slideInLeft {
  animation: slideInLeft 0.6s ease-out;
}

/* ========== COMPOSANTS SPÉCIAUX ========== */

/* Timeline */
.timeline {
  position: relative;
  padding: 20px 0;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 2px;
  background: linear-gradient(to bottom, var(--color-cyan), var(--color-purple));
  transform: translateX(-50%);
}

.timeline-item {
  position: relative;
  padding: 20px;
  background: var(--glass-bg);
  backdrop-filter: blur(var(--glass-blur));
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  margin-bottom: 20px;
}

/* Progress bars */
.progress {
  height: 8px;
  background: var(--glass-bg);
  border-radius: 4px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: var(--gradient-cyan);
  transition: width 0.6s ease;
}

/* Scrollbar personnalisée */
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
}

::-webkit-scrollbar-thumb {
  background: var(--color-cyan);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-info);
}

/* ========== EFFETS HOVER GLOBAUX ========== */
.hover-lift:hover {
  transform: translateY(-5px);
  transition: var(--transition-base);
}

.hover-scale:hover {
  transform: scale(1.05);
  transition: var(--transition-base);
}

.hover-glow:hover {
  box-shadow: var(--shadow-glow-cyan);
  transition: var(--transition-base);
}

/* ========== UTILITIES ========== */
.text-gradient {
  background: var(--gradient-cyan);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.bg-blur {
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.shadow-glow {
  box-shadow: var(--shadow-glow-cyan);
}

/* ========== RESPONSIVE ========== */
@media (max-width: 768px) {
  .theta-sidebar, .sidebar {
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  
  .theta-sidebar, .sidebar.active {
    transform: translateX(0);
  }
  
  .main-content {
    margin-left: 0;
  }
  
  .stat-card {
    margin-bottom: 15px;
  }
  
  .table {
    font-size: 14px;
  }
  
  .table td {
    padding: 12px 8px;
  }
}


/* ========== SIDEBAR GLASSMORPHIQUE ========== */

/* Sidebar principale */
.theta-sidebar, .sidebar,
.theta-sidebar, .admin-sidebar,
.theta-sidebar, .main-sidebar {
  width: 220px;
  height: 100vh;
  background: linear-gradient(180deg, rgba(23, 162, 184, 0.15) 0%, rgba(41, 50, 55, 0.95) 100%);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  border-right: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 0 30px rgba(0, 212, 255, 0.3);
  overflow-y: auto;
  overflow-x: hidden;
}

/* Logo/Header de la sidebar */
.theta-sidebar, .sidebar-header,
.theta-sidebar, .sidebar-brand {
  padding: 25px 20px;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border-bottom: 2px solid rgba(32, 185, 190, 0.3);
  text-align: center;
  margin-bottom: 20px;
}

.theta-sidebar, .sidebar-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  color: #ffffff;
  text-decoration: none;
  transition: all 0.3s ease;
}

.theta-sidebar, .sidebar-logo:hover {
  transform: scale(1.05);
}

/* Logo avec gradient */
.logo-icon {
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #20b9be, #00caff);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: white;
  font-size: 18px;
  box-shadow: 0 4px 15px rgba(32, 185, 190, 0.4);
}

.logo-text {
  font-size: 20px;
  font-weight: 600;
  background: linear-gradient(135deg, #20b9be, #00caff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Navigation */
.nav-menu,
.theta-sidebar, .sidebar-nav {
  list-style: none;
  padding: 0 15px;
  margin: 0;
}

.nav-item {
  margin-bottom: 5px;
}

/* Liens de navigation */
.nav-link {
  display: flex;
  align-items: center;
  padding: 14px 20px;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  border-radius: 12px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  font-size: 14px;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid transparent;
}

/* Hover effect */
.nav-link:hover {
  background: rgba(23, 162, 184, 0.15);
  color: #ffffff;
  transform: translateX(5px);
  border-color: rgba(32, 185, 190, 0.3);
  box-shadow: inset 0 0 20px rgba(32, 185, 190, 0.1);
}

/* Active link */
.nav-link.active,
.nav-link.router-link-active {
  background: linear-gradient(135deg, rgba(23, 162, 184, 0.25) 0%, rgba(0, 202, 255, 0.25) 100%);
  color: #00caff;
  border-left: 3px solid #00caff;
  font-weight: 600;
  box-shadow: inset 0 0 30px rgba(0, 202, 255, 0.2);
}

/* Animation shine sur active */
.nav-link.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  50%, 100% { left: 100%; }
}

/* Icônes */
.nav-icon,
.nav-link i {
  margin-right: 12px;
  width: 20px;
  text-align: center;
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.nav-link:hover .nav-icon,
.nav-link:hover i {
  color: #20b9be;
  transform: scale(1.1);
}

.nav-link.active .nav-icon,
.nav-link.active i {
  color: #00caff;
}

/* Badges */
.nav-badge {
  margin-left: auto;
  background: linear-gradient(135deg, #f44336, #e91e63);
  color: white;
  font-size: 11px;
  font-weight: 600;
  padding: 3px 8px;
  border-radius: 12px;
  min-width: 20px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(244, 67, 54, 0.4);
  animation: pulse 2s infinite;
}

/* Couleurs spécifiques pour chaque menu */
