/* =============================================
   MODIFICATIONS POUR EFFET GLASSMORPHIQUE
   ============================================= */

/* 1. MISE À JOUR DES VARIABLES ROOT */
:root {
  /* Core Colors - Plus vibrantes */
  --color-primary: #00d4ff;
  --color-primary-light: #4dd8ff;
  --color-primary-dark: #00a8cc;
  
  /* Background Colors - Plus sombres */
  --color-bg-body: #0a0a0a;
  --color-bg-sidebar: #0f0f0f;
  --color-bg-card: rgba(255, 255, 255, 0.05);
  --color-bg-dark: #050505;
  
  /* Nouveaux dégradés vibrants */
  --gradient-turquoise: linear-gradient(135deg, #00d4ff 0%, #00ff88 100%);
  --gradient-orange: linear-gradient(135deg, #ff6b00 0%, #ffaa00 100%);
  --gradient-pink: linear-gradient(135deg, #ff0080 0%, #ff4d94 100%);
  --gradient-purple: linear-gradient(135deg, #7928ca 0%, #ff0080 100%);
  
  /* Glow Colors */
  --glow-turquoise: 0 0 30px rgba(0, 212, 255, 0.3);
  --glow-orange: 0 0 30px rgba(255, 107, 0, 0.3);
  --glow-pink: 0 0 30px rgba(255, 0, 128, 0.3);
  
  /* Glass Effect */
  --glass-bg: rgba(255, 255, 255, 0.03);
  --glass-border: rgba(255, 255, 255, 0.08);
  --glass-blur: blur(12px);
}

/* 2. BODY - Fond plus sombre */
body {
  background-color: var(--color-bg-body);
  background-image: 
    radial-gradient(circle at 20% 50%, rgba(0, 212, 255, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(255, 0, 128, 0.05) 0%, transparent 50%);
}

/* 3. CARTES GLASSMORPHIQUES */
.theta-card {
  background: var(--glass-bg);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  border: 1px solid var(--glass-border);
  border-radius: 20px;
  padding: 30px;
  position: relative;
  overflow: visible;
  transition: all 0.3s ease;
}

.theta-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  border-color: rgba(255, 255, 255, 0.15);
}

/* 4. STATS CARDS AVEC EFFETS SPÉCIAUX */
.stat-card {
  background: var(--glass-bg);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  border: 1px solid var(--glass-border);
  border-radius: 24px;
  padding: 30px;
  position: relative;
  overflow: visible;
  transition: all 0.3s ease;
}

/* Effet de bordure dégradée */
.stat-card::before {
  content: '';
  position: absolute;
  inset: -2px;
  border-radius: 24px;
  padding: 2px;
  background: linear-gradient(135deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  -webkit-mask: 
    linear-gradient(#fff 0 0) content-box, 
    linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stat-card:hover::before {
  opacity: 1;
}

.stat-card:hover {
  transform: translateY(-8px) scale(1.02);
  background: rgba(255, 255, 255, 0.08);
}

/* Icônes avec dégradés et glow */
.stat-icon {
  width: 60px;
  height: 60px;
  background: var(--gradient-turquoise);
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  color: white;
  margin-bottom: 20px;
  position: relative;
  box-shadow: var(--glow-turquoise);
}

.stat-icon.success {
  background: var(--gradient-turquoise);
  box-shadow: var(--glow-turquoise);
}

.stat-icon.warning {
  background: var(--gradient-orange);
  box-shadow: var(--glow-orange);
}

.stat-icon.danger {
  background: var(--gradient-pink);
  box-shadow: var(--glow-pink);
}

/* Effet de brillance animée */
.stat-icon::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 20px;
  background: linear-gradient(135deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stat-card:hover .stat-icon::after {
  opacity: 1;
  animation: shine 0.6s ease;
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%); }
  100% { transform: translateX(100%) translateY(100%); }
}

/* 5. SIDEBAR GLASSMORPHIQUE */
.theta-sidebar {
  background: rgba(15, 15, 15, 0.8);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-right: 1px solid rgba(255, 255, 255, 0.05);
}

.nav-link {
  position: relative;
  overflow: hidden;
  border-radius: 12px;
  transition: all 0.3s ease;
}

.nav-link::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, transparent, rgba(255, 255, 255, 0.05), transparent);
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.nav-link:hover::before {
  transform: translateX(100%);
}

.nav-link.active {
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(0, 212, 255, 0.3);
  box-shadow: 0 0 20px rgba(0, 212, 255, 0.1);
}

/* 6. HEADER GLASSMORPHIQUE */
.theta-header {
  background: rgba(20, 20, 20, 0.6);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

/* 7. BOUTONS GLASSMORPHIQUES */
.btn {
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.btn::before {
  content: '';
  position: absolute;
  inset: 0;
  background: inherit;
  filter: blur(20px);
  opacity: 0.5;
  z-index: -1;
}

.btn-primary {
  background: var(--gradient-turquoise);
  box-shadow: 0 4px 20px rgba(0, 212, 255, 0.3);
}

.btn-primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 30px rgba(0, 212, 255, 0.5);
}

/* 8. INPUTS GLASSMORPHIQUES */
.form-control,
.form-select {
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: white;
}

.form-control:focus,
.form-select:focus {
  background: rgba(255, 255, 255, 0.08);
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
}

/* 9. TABLEAUX GLASSMORPHIQUES */
.theta-table {
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid var(--glass-border);
}

.theta-table tbody tr:hover {
  background: rgba(255, 255, 255, 0.05);
  box-shadow: 0 2px 10px rgba(0, 212, 255, 0.1);
}

/* 10. BADGES AVEC GLOW */
.badge {
  position: relative;
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  border: 1px solid currentColor;
}

.badge-success {
  color: #00ff88;
  box-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
}

.badge-warning {
  color: #ffaa00;
  box-shadow: 0 0 10px rgba(255, 170, 0, 0.3);
}

.badge-danger {
  color: #ff0080;
  box-shadow: 0 0 10px rgba(255, 0, 128, 0.3);
}

/* 11. ANIMATIONS SUPPLÉMENTAIRES */
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.stat-card {
  animation: float 6s ease-in-out infinite;
}

.stat-card:nth-child(2) { animation-delay: 1s; }
.stat-card:nth-child(3) { animation-delay: 2s; }
.stat-card:nth-child(4) { animation-delay: 3s; }

/* 12. EFFET DE PARTICULES (OPTIONNEL) */
.theta-content::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(0, 212, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 0, 128, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}
